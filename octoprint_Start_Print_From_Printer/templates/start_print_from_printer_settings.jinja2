<h3>{{ _('Start print from printer') }}</h3>
<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Folder:') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level"
                data-bind="value: settings.plugins.Start_Print_From_Printer.folder">
        </div>

        <label class="control-label"></label>
        <div class="controls">
            <input type="checkbox" class="input-block-level"
                data-bind="checked: settings.plugins.Start_Print_From_Printer.autoStart">
            Refresh at startup
        </div>

        <label class="control-label"></label>
        <div class="controls">
            <input type="checkbox" class="input-block-level"
                data-bind="checked: settings.plugins.Start_Print_From_Printer.commandsClient">
            {{ _('Commands on printer ') }}
        </div>

        <label class="control-label"></label>
        <div class="controls">
            <input type="checkbox" class="input-block-level"
                data-bind="checked: settings.plugins.Start_Print_From_Printer.hideFolder">
            Execlude commands folder on octoprint
        </div>

        <label class="control-label"> {{ _('Refresh:') }}</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" id="refreshHost"
                data-bind="checked: settings.plugins.Start_Print_From_Printer.refreshHost">
            Server Files
            <input type="checkbox" class="input-block-level" id="refreshSD"
                data-bind="checked: settings.plugins.Start_Print_From_Printer.refreshSD">
            SD Files
            <input type="checkbox" class="input-block-level" id="refreshDeleteOld"
                data-bind="checked: settings.plugins.Start_Print_From_Printer.refreshDeleteOld">
            Delete Old Files
        </div>
        <div class="row-fluid" data-bind="allowBindings: false">
            <div class="row-fluid" data-bind="allowBindings: true">
                <div class="control-group">
                    <div class="controls">
                        <button class="button1 btn btn-primary" data-bind="click: forceRefresh">Refresh
                            now</button>
                    </div>
                </div>
            </div>
        </div>
        <label class="control-label"></label>
        <div class="controls">
            <br>
            <br>
            <input type="checkbox" class="hideinput input-block-level" 
                data-bind="checked: settings.plugins.Start_Print_From_Printer.longWriteSuppoort">
            longWriteSuppoort
            <br> 
            disabled="false"
            <span>
                only for develop
            </span>
        </div>
    </div>
</form>